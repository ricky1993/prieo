<%= stylesheet_link_tag "Cart_disp.css" %>
<%= javascript_include_tag :"cart_show.js" %>
<div id="cart_display_container" class="container">
    <div id="title_tt">
        <h2 >
            <strong>购物车</strong>
        </h2>
    </div>
    <table id="cart_table" class="table">
      <thead>
      <tr>
        <td class="col-md-6">
          <h4>商品信息</h4>
        </td>
        <td class="col-md-6">
          <span class="col-md-3 cart_table_second"><strong>单价</strong></span>
          <span class="col-md-3 cart_table_second"><strong>数量</strong></span>
          <span class="col-md-3 cart_table_second"><strong>小计</strong></span>
          <span class="col-md-3 cart_table_second"><strong>操作</strong></span>
        </td>
      </tr>
      </thead>
      <tbody>
      <% @cart.line_items.each do |item| %>
          <tr>
            <td >
              <div id="Cart_product_image" class="col-md-3">
                <%= image_tag(item.product.image_url,width:'80px') %>
              </div>
              <div id="Cart_product_describe" class="col-md-9">
                <h4>
                  <%=item.product.title%>
                </h4>
                <h5>
                  <%=item.product.description%>
                </h5>
              </div>
            </td>
            <td class="col-md-6">
              <span class="col-md-3 cart_product_per_price">
                ￥:
                <span>
                  <%=item.product.price%>
                </span>
              </span>
              <span id="number_slider_out" class="col-md-3 ">
                <input id="number_slider" type="number" class="form-control cart_product_number" value=<%= item.quantity %>  pattern="[0-9]{2}" onchange="function_main()">
              </span>
              <span class="col-md-3 cart_product_row_total_price">
                <strong>
                  ￥:
                </strong>
                <!--<input type="text" class="form-control" disabled="disabled" id="row_total" value="<%=item.total_price%>">-->
                <span class="cart_product_row_total_price_span">
                  <%=item.total_price%>
                </span>
              </span>
              <span class="col-md-3">收藏|删除</span>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
</div>
  <div id="Cart_total" class="container">
    <table id="Cart_total_table" class="table">
        <tbody>
            <tr>
              <td><h4>总计:￥</h4></td>
              <td id="Cart_total_number"><h2 id="Cart_total_number_text"><%= @cart.total_price%></h2></td>
            </tr>
        </tbody>
    </table>
    <h4><%= link_to '清空购物车', {:action => 'empty_cart'} %></h4>
    <h4><%= link_to '结算', new_order_path, method: :get %></h4>
    <h4><%= link_to '返回', {:action => 'index'} %></h4>
  </div>




